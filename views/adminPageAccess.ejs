<!-- admin.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel | Vote Status</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }

        .card {
            width: 400px;
            margin: 0 auto;
            /* Center the card */
            margin-top: 50px;
            /* Add some top margin */
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h1 class="mb-4 text-center">Vote Status</h1>

                        <!-- Form for updating values -->
                        <form action="/admin/votestatus/update" method="POST">
                            <div class="form-group">
                                <label>Voting:</label>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" id="voteOn" name="isVoteOn"
                                        value="true" <% if (isVoteOn) { %> checked <% } %>>
                                        <label class="form-check-label" for="voteOn">Enable</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" id="voteOff" name="isVoteOn"
                                        value="false" <% if (!isVoteOn) { %> checked <% } %>>
                                        <label class="form-check-label" for="voteOff">Disable</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Winner Announcement:</label>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" id="winnerOn" name="isWinnerOn"
                                        value="true" <% if (isWinnerOn) { %> checked <% } %>>
                                        <label class="form-check-label" for="winnerOn">Enable</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" id="winnerOff" name="isWinnerOn"
                                        value="false" <% if (!isWinnerOn) { %> checked <% } %>>
                                        <label class="form-check-label" for="winnerOff">Disable</label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>