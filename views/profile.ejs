<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body>

    <div class="profile-card">
        <% if (successMessage && successMessage.length> 0) { %>
            <div class="alert alert-success" role="alert">
                <%= successMessage %>
            </div>
            <% } %>
                <% if (errorMessage && errorMessage.length> 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                    <% } %>

                        <div title="Your Dp" class="avatar"><img
                                src="/uploads/userDp/<%= user.userDp || `default.png` %>" alt="profile-img"></div>
                        <div class="salutation">
                            <div class="name">
                                <p>
                                    <%= user.username %>
                                </p>
                            </div>
                            <div class="designation">
                                <%= user.name %>
                            </div>
                        </div>
                        <div class="options">
                            <a title="Logout" class="button" href="/logout"><img src="/images/icons8-logout-30.png"></a>
                            <button title="Edit profile" class="button" id="edit-button"
                                data-userDp="<%= user.userDp %>" data-username="<%= user.username %>"
                                data-name="<%= user.name %>" data-email="<%= user.email %>"
                                data-mobile="<%= user.mobile %>" data-dob="<%= user.dob %>"> <img
                                    src="/images/edit profile.gif"></button>
                            <a title="More Info" class="button" href="/profile/moredetail"> <img
                                    src="/images/more.png"></a>
                        </div>
    </div>

    <!-- Bootstrap modal for editing user details -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Form for editing user details -->
                    <div id="uploadedDpPhoto">
                        <img id="previewProfilePicture" alt="Profile Picture">
                    </div>
                    <form id="editForm" method="POST">
                        <div class="form-group">
                            <label for="editProfilePicture">Profile Picture</label>
                            <input type="file" accept="image/*" class="form-control-file" id="editProfilePicture"
                                name="profilePicture">
                            <input type="hidden" name="userOldDp">
                        </div>
                        <div class="form-group">
                            <label for="editUsername">Username</label>
                            <input type="text" class="form-control" id="editUsername" name="username" readonly>
                        </div>
                        <div class="form-group">
                            <label for="editName">Name</label>
                            <input type="text" class="form-control" id="editName" name="name">
                        </div>
                        <div class="form-group">
                            <label for="editEmail">Email</label>
                            <input type="email" class="form-control" id="editEmail" name="email">
                        </div>
                        <div class="form-group">
                            <label for="editMobile">Mobile</label>
                            <input type="text" class="form-control" id="editMobile" name="mobile">
                        </div>
                        <div class="form-group">
                            <label for="editDob">Date of Birth</label>
                            <input type="date" class="form-control" id="editDob" name="dob">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script> -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/profile.js"></script>

</body>

</html>