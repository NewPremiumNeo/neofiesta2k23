                      <img src="<%= post.postVideoUrl %>" alt="Photos" loading="lazy" class="gallery-image">
                    </a>
                    <div class="button-container">
                      <div class="button__like">
                        <span class="img_like">
                          <i onclick="liketoggle('<%= post._id %>')" id="<%= post._id %>"
                            class="ri-heart-line btn-like"></i>
                          <i class="ri-bookmark-3-line"></i>
                        </span>
                        <i class="ri-download-fill"></i>
                      </div>
                      <h6 id="totalLike-<%= post._id %>"></h6>
                    </div>
                  </div>
                  <% }); %>
                    <% } else { %>
                      <h1 style="color: #333;">No Liked Video</h1>
                      <% } %>
            </section>
          </main>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap modal for Saved Videos -->
  <div class="modal fade" id="savedVideos" tabindex="-1" aria-labelledby="savedVideosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="savedVideosLabel">Saved Videos:- <%= user.savedVideos.length || 0 %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <main>
            <section class="gallery" style="display: block;">
              <% if (user.savedVideos && user.savedVideos.length> 0) { %>
                <% user.savedVideos.forEach(post=> { %>
