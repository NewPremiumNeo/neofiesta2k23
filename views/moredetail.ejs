<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile</title>

  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/css/lightbox.css"
    integrity="sha512-Woz+DqWYJ51bpVk5Fv0yES/edIMXjj3Ynda+KWTIkGoynAMHrqTcDUQltbipuiaD5ymEo9520lyoVOo9jCQOCA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    .container {
      max-width: 100%;
      max-height: 100%;
      margin: 5rem auto;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 1.3rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* .profile-picture {
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
      margin: 0 auto 1.8rem;
      display: block;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    } */

    .avatar {
      width: 160px;
      height: 160px;
      outline: 0.5rem solid #ecf1ff;
      border-radius: 50%;
      position: relative;
    }

    .avatar>img {
      position: absolute;
      outline: 10px #ecf1ff;
      border-radius: 50%;
      width: 100%;
      height: 100%;
      aspect-ratio: 1/1;
      object-fit: cover;
      margin: 0 auto 1.8rem;
      display: block;
    }

    .profile-info {
      line-height: 2rem;
      margin-bottom: 1.5rem;
    }

    .profile-info p {
      margin: 0.3rem 0;
    }

    .profile-info h2 {
      margin-top: 0.5rem;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    ul li {
      margin-bottom: 0.2rem;
      padding-left: 0.5rem;
      position: relative;
    }

    ul li:before {
      content: "\2022";
      position: absolute;
      left: 0;
      color: #007bff;
    }

    /* Gallery Styles */
    main>.gallery {
      columns: 1;
      gap: 24px;
      align-items: center;
      padding: 24px;
      max-width: 1400px;
      width: 100%;
      margin: auto;
    }

    .grid__images {
      margin-bottom: 22px;
      display: flex;
      flex-direction: column;
    }

    .grid__images a {
      display: inline-block;
      background-color: black;
    }

    main .gallery .gallery-image {
      object-fit: cover;
      width: 100%;
      height: auto;
      cursor: zoom-in;
    }

    .button-container {
      width: 100%;
      background-color: rgba(0, 0, 0);
    }

    .button-container h6 {
      color: #fff;
      padding: 0px 15px 5px 18px;
    }

    .button__like {
      width: 100%;
      display: flex;
      justify-content: space-between;
      padding: 10px 15px 5px 15px;
      background-color: rgba(0, 0, 0);
      transition: 0.3s ease-in-out;
    }

    .img_like {
      display: flex;
      gap: 20px;
    }

    i {
      font-size: 30px;
      color: white;
    }

    .ri-heart-fill {
      color: red;
    }
  </style>

</head>

<body>
  <h1>User Profile</h1>
  <div class="container">
    <div class="avatar">
      <img class="profile-picture" src="<%= user.userDp || `/uploads/userDp/default.png` %>" alt="Profile Picture" />
    </div>
    <div class="profile-info">
      <p><strong>Username:</strong>
        <%= user.username %>
      </p>
      <p><strong>Name:</strong>
        <%= user.name %>
      </p>
      <p><strong>Email:</strong>
        <%= user.email %>
      </p>
      <p><strong>Mobile:</strong>
        <%= user.mobile %>
      </p>
      <p>
        <strong>Date of Birth:</strong>
        <%= user.dob || "Not specified" %>
      </p>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#likedPhotos">Liked
        Photos</button>
      <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#likedVideos">Liked
        Videos</button> -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#savedPhotos">Saved
        Photos</button>
      <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#savedVideos">Saved
        Videos</button> -->

    </div>
  </div>

  <!-- Bootstrap modal for Liked Photos -->
  <div class="modal fade" id="likedPhotos" tabindex="-1" aria-labelledby="likedPhotosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="likedPhotosLabel">Liked Photos :- <%= user.likePhotoIds.length || 0 %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <main>
            <section class="gallery" style="display: block;">
              <% if (user.likePhotoIds && user.likePhotoIds.length> 0) { %>
                <% user.likePhotoIds.forEach(post=> { %>
                  <div class="grid__images">
                    <a href="<%= post.postImageUrl %>" data-lightbox="models" data-title="Photos">
                      <img src="<%= post.postImageUrl %>" alt="Photos" loading="lazy" class="gallery-image">
                    </a>
                    <div class="button-container">
                      <div class="button__like">
                        <span class="img_like">
                          <i onclick="liketoggle('<%= post._id %>')" data-photo-id="<%= post._id %>"
                            id="like-<%= post._id %>" class="ri-heart-line btn-like"></i>
                          <i onclick="savetoggle('<%= post._id %>')" data-photo-id="<%= post._id %>"
                            id="save-<%= post._id %>" class="ri-bookmark-3-line btn-save"></i>
                        </span>
                        <i class="ri-download-fill"></i>
                      </div>
                      <h6 id="totalLike-<%= post._id %>"></h6>
                    </div>
                  </div>
                  <% }); %>
                    <% } else { %>
                      <h1 style="color: #333;">No Liked Photo</h1>
                      <% } %>
            </section>
          </main>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap modal for Saved Photos -->
  <div class="modal fade" id="savedPhotos" tabindex="-1" aria-labelledby="savedPhotosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
